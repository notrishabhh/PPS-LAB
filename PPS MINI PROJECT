#include<stdio.h>
#include<stdlib.h>
int main()
{

int a,b,s,i,choice,fact=1;

while(1)
{
printf("\nSelect an option");
printf("\n1. Addition");
printf("\n2. Odd-Even");
printf("\n3. Printing N numbers ");
printf("\n4. Find the factorial");
printf("\n5. Exit");

printf("\n\n Enter your choice");
scanf("%d",&choice);
switch(choice)
{
    case 1:
    printf("Enter two numbers");
    scanf("%d %d",&a,&b);
    s=a+b;
    printf("\n Sum is %d",s);
    break;
    case 2:
    printf("Enter a number");
    scanf("%d", &a);
    if(a%2==0)
    printf("Even Number");
    else
    printf("Odd Number");
    break;
    case 3:
    printf("Enter a number");
    scanf("%d",&a);
    for(b=1;b<=a;b++)  
   {
    printf("%d\t",b);
    }
    break;
    case 4:
    printf("Enter a number");
    scanf("%d",&a);
    for(i=1;i<=a;i++)
        {fact=fact*i;
    }
    printf("Factorial of %d is %d",a,fact);
    break;
    case 5: exit(0);
    default:
    printf("Invalid Choice\n");
}
}
return 0;
}
